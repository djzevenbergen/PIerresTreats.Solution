@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h2>Add a Flavor</h2>

<h4>Add a category to this task: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("New Flavor", "Create", "Flavors")</p>
<p>@Html.ActionLink("Back home", "Index", "Home")</p>
<p>@Html.ActionLink($"Back to {Model.Name}", "Details", new {id  = Model.TreatId})</p>